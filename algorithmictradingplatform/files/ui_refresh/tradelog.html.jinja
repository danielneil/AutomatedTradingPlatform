<!DOCTYPE html>
<html>
  <head>
	  <title>Backtest Trade Log for ticker: {{ ticker }}</title>
  </head>
  <body>
	  <h2>Trade Log for {{ ticker }}</h2>
	  <hr />
	  <div style="font-weight: bold">Summary:</div><br />
	  <div style="font-weight: bold">Total Trades:</div>{{ total_trades }}<br />
	  <div style="font-weight: bold">Highest:</div>{{ highest_trade }}<br />
	  <div style="font-weight: bold">Lowest:</div>{{ lowest_trade }}<br />
	  <hr />
	  <table width="80%" border=1>
		<tr>
			<th>Date/Time</th>
			<th>Action</th>
			<th>Ticker</th>
			<th>Quanity</th>
			<th>Price</th>
		</tr>
  		{% for key,value in x.iterrows() %}
		<tr>
			<td>{{ value['datetime'] }}</td>
			<td>{{ value['action'] }}</td>
			<td>{{ value['ticker'] }}</td>
			<td>{{ value['quantity'] }}</td>
			<td>{{ value['price'] }}</td>
		</tr>
  		{% endfor %}
  	  </table>
  </body>
</html>
